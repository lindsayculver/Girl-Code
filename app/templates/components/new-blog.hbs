{{#if addNewBlog}}
<h3>New Blog Post</h3>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="groupName">Name and group:</label>
      {{input value=groupName id="groupName"}}
    </div>

    <div class="form-group">
      <label for="content">Say it:</label>
      {{input value=content id="content"}}
    </div>
    <button type="button" class="btn btn-primary btn-xs" {{action 'save1'}}>Save</button>
  </form>
</div>
{{else}}
  <button type="button" class="btn btn-primary btn-md" {{action 'blogFormShow'}}>Add Blog Post</button>
{{/if}}


{{yield}}
